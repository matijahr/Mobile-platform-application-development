<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/item_inspiring_person_padding"
    android:layout_margin="@dimen/item_inspiring_person_margin"
    android:background="@color/gray"

    >

    <ImageView
        android:id="@+id/iv_inspiring_person"
        android:layout_width="@dimen/inspiringPerson_iv_width"
        android:layout_height="@dimen/inspiringPerson_iv_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_noteItem_name"
        android:layout_width="@dimen/inspiringPerson_tvName_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginLeft_tv_noteItem_name"

        android:textColor="@color/white"

        app:layout_constraintTop_toTopOf="@id/iv_inspiring_person"
        app:layout_constraintStart_toEndOf="@id/iv_inspiring_person"
        app:layout_constraintEnd_toEndOf="parent"

        tools:text="@tools:sample/lorem"
        android:maxLines="1"
        />

    <TextView
        android:id="@+id/tv_noteItem_DoB"
        android:layout_width="@dimen/inspiringPerson_tvDoB_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginLeft_tv_noteItem_description"
        android:layout_marginTop="@dimen/itemInspiringPerson_tvDoB_marginTop"

        android:textColor="@color/white"

        app:layout_constraintTop_toBottomOf="@id/tv_noteItem_name"
        app:layout_constraintStart_toEndOf="@id/iv_inspiring_person"
        app:layout_constraintEnd_toEndOf="parent"

        android:maxLines="1"
        tools:text="@tools:sample/lorem/random"
        />

    <TextView
        android:id="@+id/tv_noteItem_description"
        android:layout_width="@dimen/inspiringPerson_tvDescription_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginLeft_tv_noteItem_description"
        android:layout_marginTop="@dimen/itemInspiringPerson_tvDescription_marginTop"

        android:textColor="@color/white"

        app:layout_constraintTop_toBottomOf="@id/tv_noteItem_DoB"
        app:layout_constraintStart_toEndOf="@id/iv_inspiring_person"
        app:layout_constraintEnd_toEndOf="parent"

        android:maxLines="2"
        tools:text="@tools:sample/lorem/random"/>

</androidx.constraintlayout.widget.ConstraintLayout>