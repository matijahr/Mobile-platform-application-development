<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pocketengineer">

    <application
        android:name=".PocketEngineerApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PocketEngineer">

        <activity android:name=".ui.main.view.ResistorActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".ui.main.view.LightSensorActivity" />

        <activity android:name=".ui.main.view.NewRoomActivity" />

        <activity android:name=".ui.main.view.GraphViewActivity" />

        <activity android:name=".ui.main.view.MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>