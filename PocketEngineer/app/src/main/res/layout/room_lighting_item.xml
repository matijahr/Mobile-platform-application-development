<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:padding="5dp"
    android:background="@color/light_blue"
    >

    <TextView
        android:id="@+id/tv_roomName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="@tools:sample/lorem"
        android:textSize="@dimen/tv_roomName_textSize"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_roomLighting"
        />

    <TextView
        android:id="@+id/tv_roomLighting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="@tools:sample/lorem"
        android:textSize="@dimen/tv_roomLighting_textSize"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_roomName"/>


</androidx.constraintlayout.widget.ConstraintLayout>